<% layout("/layouts/boilerplate.ejs") %>

    <div class="row mt-3">
        <h3 class="col-8 offset-3 mb-4">LogIn to WanderLust :)</h3>

        <div class="col-6 offset-3">

            <form action="/login" method="post" novalidate class="needs-validation" style="font: size 0.5em;">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" placeholder="Enter username" type="text" class="form-control" id="username"
                        required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Enter password</label>
                    <input name="password" placeholder="Enter password" type="password" class="form-control"
                        id="password" required>
                </div>
                <button class="btn btn-primary">
                      LogIn
                </button>
            </form>
        </div>
    </div>