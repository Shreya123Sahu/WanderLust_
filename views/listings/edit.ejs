<% layout("/layouts/boilerplate.ejs") %>

    <body>

        <div class="row">
            <div class="col-8 offset-2">
                <br>
                <h3 class="heading">Edit the listing</h3>
                <br>
                <form method="post" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div>
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" class="form-control" value="<%= listing.title %>" type="text" required>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                          <div class="invalid-feedback">
                            Please enter a title.
                          </div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>

                        <textarea name="listing[description]" class="form-control"
                            type="text" required><%= listing.description %></textarea>
                            <div class="valid-feedback">
                                Looks good!
                              </div>
                              <div class="invalid-feedback">
                                Please enter description.
                              </div>

                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Image</label>

                        <input name="listing[image]" class="form-control" type="file" >

                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>

                        <input name="listing[price]" class="form-control" value="<%= listing.price %>" type="number" required>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                          <div class="invalid-feedback">
                            Please enter a valid price.
                          </div>

                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>

                        <input name="listing[location]" class="form-control" value="<%= listing.location %>"
                            type="text" required>
                            <div class="valid-feedback">
                                Looks good!
                              </div>
                              <div class="invalid-feedback">
                                Please enter a location.
                              </div>

                    </div>
                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>

                        <input name="listing[country]" class="form-control" value="<%= listing.country %>" type="text" required>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                          <div class="invalid-feedback">
                            Please enter a country name.
                          </div>

                    </div>
                    <button class="btn btn-dark add-btn mb-3">Edit</button>
                </form>
            </div>
        </div>
    </body>